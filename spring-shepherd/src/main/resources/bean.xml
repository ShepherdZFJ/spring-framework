<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--把对象的创建交给spring来管理-->
	<bean id="user" class="com.shepherd.domain.User" primary="true">
		<property name="id" value="100"></property>
		<property name="name" value="shepherd"></property>
	</bean>

	<bean id="user1" class="com.shepherd.domain.User">
		<property name="id" value="101"></property>
		<property name="name" value="shepherd1111"></property>
	</bean>

	<bean id="superUser" class="com.shepherd.domain.SuperUser" parent="user">
		<property name="roleName" value="admin"></property>
		<property name="address" value="杭州未来科技城"></property>
	</bean>

	<bean id="objectFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
		<property name="targetBeanName" value="user"></property>
	</bean>

	<!-- 将 Spring 容器中 "user" Bean 关联/建立别名 - "xiaomage-user" -->
	<alias name="user" alias="shepherd-user" />

</beans>